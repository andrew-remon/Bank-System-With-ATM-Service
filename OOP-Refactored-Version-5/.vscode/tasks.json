{
    "version": "2.0.0",
    "tasks": [
        {
        "type": "cppbuild",
        "label": "Build active file",
        "command": "C:\\Program Files\\msys64\\mingw64\\bin\\g++.exe",
        "args": [
            "-fdiagnostics-color=always",
            "-g",
            "${file}",
            "-o",
            "${fileDirname}\\${fileBasenameNoExtension}.exe"
        ],
        "options": {
            "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": "build",
        "detail": "Builds only the currently open file"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\Program Files\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/Classes/Screens/Misc/clsMainScreen.cpp",
                "${workspaceFolder}/Classes/Screens/Transactions/clsTransactionScreen.cpp",
                "${workspaceFolder}/Classes/Screens/User/clsUserScreen.cpp",
                "${workspaceFolder}/Classes/Screens/Login/clsLoginScreen.cpp",
                "${workspaceFolder}/Classes/Core/clsGlobal.cpp",
                "${workspaceFolder}/Classes/Core/clsBankUser.cpp",
                "${workspaceFolder}/Classes/Core/clsBankClient.cpp",
                "-o",
                "${workspaceFolder}/app.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds all .cpp files in root and Libraries folder into app.exe"
        }
    ]
}
